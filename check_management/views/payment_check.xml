<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--      payment check tree view-->
        <record model="ir.ui.view" id="payment_check_tree">
            <field name="name">Check Payment</field>
            <field name="model">payment.check</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="amount"/>
                    <field name="payment_date"/>
                    <field name="journal_id"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!--      payment check form view-->
        <record model="ir.ui.view" id="payment_check_form">
            <field name="name">Check Payment</field>
            <field name="model">payment.check</field>
            <field name="arch" type="xml">
                <form string="Payment Checks" class="o_sale_order">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="button_check_lines" string="Checks" type="object"
                                    groups="account.group_account_user" invisible="check_lines == []"
                                    icon="fa-bars"/>
                            <field name="check_lines" invisible="1"/>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="amount"/>
                                <field name="payment_date"/>
                            </group>
                            <group>
                                <field name="payment_type"/>
                                <field name="journal_id"/>
                            </group>
                        </group>
<!--                        <notebook>-->
<!--                            <page string="Check Lines">-->
<!--                                <field name="check_lines" mode="list">-->
<!--                                    <list string="Check Lines" editable="bottom">-->
<!--                                        <field name="check_number"/>-->
<!--                                        <field name="check_date"/>-->
<!--                                        <field name="check_amount"/>-->
<!--                                        <field name="check_bank_id"/>-->
<!--                                    </list>-->
<!--                                </field>-->
<!--                            </page>-->
<!--                        </notebook>-->
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_check_search" model="ir.ui.view">
            <field name="name">Check Search</field>
            <field name="model">payment.check.line</field>
            <field name="arch" type="xml">
                <search string="Checks">
                    <field name="check_number"
                           filter_domain="['|', ('check_number','ilike',self), ('partner_id','ilike',self)]"
                           string="Description"/>
                    <separator/>
                    <filter string="Payable" name="payable_filter" domain="[('check_type','=','outbound')]"/>
                    <filter string="Receivable" name="receivable_filter" domain="[('check_type','=','inbound')]"/>
                </search>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="payment_check_line_receivable_tree_action">
            <field name="name">Receivable Check Payment</field>
            <field name="res_model">payment.check.line</field>
            <field name="type">ir.actions.act_window</field>
            <!--      <field name="view_type">form</field>-->
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_receivable_filter': 1}</field>
            <!--      <field name="domain">[('check_type','=','inbound')]</field>-->
        </record>

        <record model="ir.actions.act_window" id="payment_check_line_payable_tree_action">
            <field name="name">Payable Check Payment</field>
            <field name="res_model">payment.check.line</field>
            <field name="type">ir.actions.act_window</field>
            <!--      <field name="view_type">form</field>-->
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_payable_filter': 1}</field>
            <!--      <field name="domain">[('check_type','=','outbound')]</field>-->
        </record>


        <!-- Top menu item -->
        <menuitem name="Checks"
                  id="check_management.menu_finance"
                  groups="account.group_account_user,account.group_account_manager,account.group_account_invoice"
                  web_icon="check_management,static/description/icon.png"
                  sequence="60"/>
        
        <!-- Customer Section -->
        <menuitem id="menu_customer" name="Customers" parent="check_management.menu_finance" sequence="10"/>
        
        <menuitem action="account.action_account_payments" 
                  id="check_management.menu_action_account_payments_receivable"
                  parent="check_management.menu_customer" 
                  name="Customer Payments" 
                  sequence="1"/>
        <menuitem name="Receivable Checks" 
                  action="payment_check_line_receivable_tree_action"
                  id="menu_action_check_payment_receivable"
                  parent="check_management.menu_customer"
                  sequence="2"/>
        
        <!-- Vendor Section -->
        <menuitem id="menu_vendor" name="Vendors" parent="check_management.menu_finance" sequence="20"/>
        <menuitem action="account.action_account_payments_payable" 
                  id="check_management.menu_action_account_payments_payable"
                  parent="check_management.menu_vendor" 
                  name="Vendor Payments" 
                  sequence="1"/>
        <menuitem name="Payable Checks" 
                  action="payment_check_line_payable_tree_action"
                  id="menu_action_check_payment_payable"
                  parent="check_management.menu_vendor"
                  sequence="2"/>
        
        
    </data>
</odoo>