<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit account.payment form view to add internal transfer fields -->
        <record id="view_account_payment_form_internal_transfer" model="ir.ui.view">
            <field name="name">account.payment.form.internal.transfer</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                
                <!-- Add is_internal_transfer field after payment_type -->
                <field name="payment_type" position="after">
                    <field name="is_internal_transfer" widget="boolean_toggle"/>
                </field>

                <!-- Add destination_journal_id field after journal_id -->
                <field name="journal_id" position="after">
                    <field name="destination_journal_id" 
                           invisible="is_internal_transfer == False"
                           required="is_internal_transfer == True"/>
                </field>

                <!-- Hide partner_id when internal transfer is selected -->
                <field name="partner_id" position="attributes">
                    <attribute name="invisible">is_internal_transfer == True</attribute>
                    <attribute name="required">is_internal_transfer == False</attribute>
                </field>

                <!-- Add paired payment field after partner_bank_id -->
                <xpath expr="//field[@name='partner_bank_id']" position="after">
                    <field name="paired_internal_transfer_payment_id" 
                           invisible="is_internal_transfer == False"
                           readonly="1"/>
                </xpath>

            </field>
        </record>

        <!-- Add filter for internal transfers in search view -->
        <record id="view_account_payment_search_internal_transfer" model="ir.ui.view">
            <field name="name">account.payment.search.internal.transfer</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <search position="inside">
                    <separator/>
                    <filter string="Internal Transfers" name="internal_transfers" 
                            domain="[('is_internal_transfer', '=', True)]"/>
                </search>
            </field>
        </record>

        <!-- Tree view to show destination journal -->
        <record id="view_account_payment_tree_internal_transfer" model="ir.ui.view">
            <field name="name">account.payment.tree.internal.transfer</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="destination_journal_id" optional="hide"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
